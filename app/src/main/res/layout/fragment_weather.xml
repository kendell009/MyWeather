<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/weather3"
    tools:context=".WeatherFragment"
    >

    <TextView
        android:text="The Weather Report"
        android:layout_width="match_parent"
        android:id="@+id/tvAppname"
        android:textStyle="normal|bold|italic"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_height="wrap_content"
        android:elevation="1dp" />

    <TextView
        android:text="MalmÃ¶'s Current Weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCitySubtitle"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:elevation="1dp" />

    <Space
        android:layout_width="1dp"
        android:layout_height="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/layoutPressure"
            android:background="@color/wholeBox"
            android:layout_weight="7.88"
            android:minHeight="0dp">

            <TextView
                android:text="Pressure:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/p_Pressure"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <TextView
                android:text="Accuracy:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/p_Accuracy"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <TextView
                android:text="Timestamp:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/p_Timestamp"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/p_ASTInfo"
                android:textColor="@color/AsyncTask"
                android:layout_weight="1" />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/p_ASTPressure"
                android:textColor="@color/AsyncTask"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_height="60dp"
            app:srcCompat="@drawable/pressure"
            android:id="@+id/imageView"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutHumidity"
            android:background="@color/wholeBox"
            android:layout_weight="8">

            <TextView
                android:text="Humidity:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/h_Humidity"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <TextView
                android:text="Accuracy:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/h_Accuracy"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <TextView
                android:text="Timestamp:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/h_Timestamp"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/h_ASTInfo"
                android:textColor="@color/AsyncTask"
                android:layout_weight="1" />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/h_ASTHumidity"
                android:textColor="@color/AsyncTask"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/humidity"
            android:id="@+id/imageView2"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutTemp"
            android:background="@color/wholeBox"
            android:layout_weight="8">

            <TextView
                android:text="Temperature:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_Temp"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <TextView
                android:text="Accuracy:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_Accuracy"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <TextView
                android:text="Timestamp:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_Timestamp"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_ASTInfo"
                android:textColor="@color/AsyncTask"
                android:layout_weight="1" />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_ASTTemperature"
                android:textColor="@color/AsyncTask"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/temperature"
            android:id="@+id/imageView3"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="8dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutAltitude"
        android:background="@color/wholeBox">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAltitude"
            android:textColor="@color/AsyncTask"
            android:elevation="1dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="8dp"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutASTBtn">

        <Space
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:id="@+id/space" />

        <Button
            android:text="ASync Task"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:id="@+id/btnAST"
            android:elevation="7dp"
            android:background="@drawable/roundbutton"
            android:textColor="@color/textColor"
            android:padding="4dp"
            android:layout_marginEnd="104dp"
            android:layout_alignTop="@+id/btnVolley"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Volley"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:id="@+id/btnVolley"
            android:elevation="7dp"
            android:background="@drawable/roundbutton"
            android:textColor="@color/textColor"
            android:padding="4dp"
            android:layout_marginEnd="28dp"
            android:layout_below="@+id/space"
            android:layout_toStartOf="@+id/btnAST"
            android:layout_marginTop="13dp" />

    </RelativeLayout>
</LinearLayout>


